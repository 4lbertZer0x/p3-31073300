<%- include('../partials/header') %>
        <main class="main-content admin-content">
            <div class="admin-header">
                <h2>Gestión de Contenido</h2>
                <p>Administra el catálogo de películas y series</p>
            </div>

            <div class="content-tabs">
                <div class="tab-buttons">
                    <button class="tab-button active" onclick="openTab('movies')">Películas (<%= movies.length %>)</button>
                    <button class="tab-button" onclick="openTab('series')">Series (<%= series.length %>)</button>
                </div>

                <div id="movies" class="tab-content active">
                    <div class="content-header">
                        <h3>Películas</h3>
                        <button class="btn btn-primary">Agregar Película</button>
                    </div>
                    <div class="content-grid">
                        <% movies.forEach(movie => { %>
                            <div class="content-card">
                                <div class="content-info">
                                    <h4><%= movie.title %></h4>
                                    <p><strong>Año:</strong> <%= movie.year %></p>
                                    <p><strong>Género:</strong> <%= movie.genre %></p>
                                    <p><strong>Director:</strong> <%= movie.director %></p>
                                </div>
                                <div class="content-actions">
                                    <button class="btn btn-small btn-info">Editar</button>
                                    <button class="btn btn-small btn-danger">Eliminar</button>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>

                <div id="series" class="tab-content">
                    <div class="content-header">
                        <h3>Series</h3>
                        <button class="btn btn-primary">Agregar Serie</button>
                    </div>
                    <div class="content-grid">
                        <% series.forEach(serie => { %>
                            <div class="content-card">
                                <div class="content-info">
                                    <h4><%= serie.title %></h4>
                                    <p><strong>Año:</strong> <%= serie.year %></p>
                                    <p><strong>Género:</strong> <%= serie.genre %></p>
                                    <p><strong>Temporadas:</strong> <%= serie.seasons %></p>
                                </div>
                                <div class="content-actions">
                                    <button class="btn btn-small btn-info">Editar</button>
                                    <button class="btn btn-small btn-danger">Eliminar</button>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </main>

        <script>
            function openTab(tabName) {
                // Ocultar todos los tabs
                document.querySelectorAll('.tab-content').forEach(tab => {
                    tab.classList.remove('active');
                });
                document.querySelectorAll('.tab-button').forEach(button => {
                    button.classList.remove('active');
                });

                // Mostrar el tab seleccionado
                document.getElementById(tabName).classList.add('active');
                event.currentTarget.classList.add('active');
            }
        </script>
<%- include('../partials/footer') %>