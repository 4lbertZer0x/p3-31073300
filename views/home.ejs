<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --amazon-orange: #00ff11;
            --amazon-dark: #131921;
            --amazon-light: #232f3e;
            --amazon-gray: #f3f3f3;
            --amazon-text: #0f1111;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Amazon Ember', Arial, sans-serif;
            background-color: var(--amazon-gray);
            color: var(--amazon-text);
            line-height: 1.6;
        }

        /* Header Estilo Amazon */
        .amazon-header {
            background: var(--amazon-dark);
            color: white;
            padding: 10px 20px;
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
        }

        .logo-icon {
            color: var(--amazon-orange);
            font-size: 2rem;
        }

        .logo-text {
            font-size: 1.5rem;
            font-weight: bold;
            color: white;
            font-family: 'Amazon Ember', Arial, sans-serif;
        }

        .logo-text span {
            color: var(--amazon-orange);
        }

        .search-bar {
            flex: 1;
            max-width: 800px;
            display: flex;
        }

        .search-bar input {
            flex: 1;
            padding: 10px 15px;
            border: none;
            font-size: 1rem;
            border-radius: 4px 0 0 4px;
        }

        .search-bar button {
            background: var(--amazon-orange);
            border: none;
            padding: 10px 20px;
            border-radius: 0 4px 4px 0;
            cursor: pointer;
            color: var(--amazon-dark);
            font-weight: bold;
        }

        .header-nav {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .nav-item {
            display: flex;
            flex-direction: column;
            color: white;
            text-decoration: none;
            padding: 5px;
        }

        .nav-item span:first-child {
            font-size: 0.8rem;
        }

        .nav-item span:last-child {
            font-size: 1rem;
            font-weight: bold;
        }

        .cart {
            position: relative;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .cart-count {
            position: absolute;
            top: -5px;
            right: -5px;
            background: var(--amazon-orange);
            color: var(--amazon-dark);
            border-radius: 50%;
            width: 20px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.8rem;
            font-weight: bold;
        }

        /* User Dropdown */
        .user-dropdown {
            position: relative;
        }

        .user-dropdown-btn {
            background: none;
            border: none;
            color: white;
            display: flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
            padding: 8px 12px;
            border-radius: 4px;
            transition: background 0.3s;
        }

        .user-dropdown-btn:hover {
            background: rgba(255,255,255,0.1);
        }

        .user-avatar {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background: var(--amazon-orange);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            color: var(--amazon-dark);
        }

        .dropdown-content {
            position: absolute;
            top: 100%;
            right: 0;
            background: white;
            min-width: 200px;
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
            border-radius: 4px;
            z-index: 1000;
            display: none;
            overflow: hidden;
        }

        .user-dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown-header {
            padding: 15px;
            background: var(--amazon-light);
            color: white;
        }

        .dropdown-header h4 {
            margin-bottom: 5px;
        }

        .dropdown-header p {
            font-size: 0.9rem;
            opacity: 0.9;
        }

        .dropdown-item {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 12px 15px;
            color: var(--amazon-text);
            text-decoration: none;
            transition: background 0.3s;
            border-bottom: 1px solid #f0f0f0;
        }

        .dropdown-item:last-child {
            border-bottom: none;
        }

        .dropdown-item:hover {
            background: #f8f8f8;
        }

        .dropdown-item i {
            width: 20px;
            color: #666;
        }

        .dropdown-item.logout {
            color: #cc0c39;
        }

        .dropdown-item.logout i {
            color: #cc0c39;
        }

        /* Subnav Estilo Amazon - SIMPLIFICADO */
        .amazon-subnav {
            background: var(--amazon-light);
            padding: 10px 20px;
            display: flex;
            align-items: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .subnav-links {
            display: flex;
            gap: 15px;
            align-items: center;
        }

        .subnav-links a {
            color: white;
            text-decoration: none;
            padding: 8px 12px;
            border-radius: 3px;
            transition: background 0.3s;
            font-size: 0.9rem;
        }

        .subnav-links a:hover {
            background: rgba(255,255,255,0.1);
        }

        .subnav-links a.active {
            background: rgba(255,255,255,0.2);
        }

        /* User Menu */
        .user-menu {
            margin-left: auto;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .btn {
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
            font-size: 0.9rem;
        }

        .btn-primary { background: var(--amazon-orange); color: var(--amazon-dark); }
        .btn-success { background: #007600; color: white; }
        .btn-danger { background: #cc0c39; color: white; }
        .btn-secondary { background: #37475a; color: white; }

        /* Main Content */
        .container {
            max-width: 1500px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Hero Banner */
        .hero-banner {
            background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('https://images.unsplash.com/photo-1496171367470-9ed9a91ea931?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 40px;
            border-radius: 8px;
            margin-bottom: 30px;
            text-align: center;
        }

        .hero-banner h1 {
            font-size: 2.5rem;
            margin-bottom: 15px;
            color: white;
        }

        .hero-banner p {
            font-size: 1.1rem;
            margin-bottom: 25px;
            max-width: 800px;
            margin-left: auto;
            margin-right: auto;
        }

        /* Welcome Message */
        .welcome-message {
            background: white;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            border-left: 4px solid var(--amazon-orange);
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 15px;
        }

        .welcome-text {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .welcome-text i {
            font-size: 1.5rem;
            color: var(--amazon-orange);
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 10px;
            flex-wrap: wrap;
        }

        .user-badge {
            background: #f0f0f0;
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        .user-badge.admin {
            background: #ffa41c;
            color: var(--amazon-dark);
        }

        /* Products Grid */
        .section-title {
            font-size: 1.5rem;
            margin: 30px 0 20px;
            color: var(--amazon-text);
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 25px;
            margin-bottom: 50px;
        }

        .product-card {
            background: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            transition: transform 0.3s, box-shadow 0.3s;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15);
        }

        .product-image {
            width: 100%;
            height: 200px;
            background: #f8f8f8;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 15px;
            overflow: hidden;
        }

        .product-image img {
            max-width: 100%;
            max-height: 170px;
            width: auto;
            height: auto;
            object-fit: contain;
            transition: transform 0.3s ease;
        }

        .product-card:hover .product-image img {
            transform: scale(1.05);
        }

        .product-details {
            padding: 15px;
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }

        .product-name {
            font-size: 1.1rem;
            font-weight: bold;
            margin-bottom: 10px;
            color: var(--amazon-text);
            line-height: 1.3;
            min-height: 40px;
        }

        .product-price {
            font-size: 1.4rem;
            font-weight: bold;
            color: #b12704;
            margin: 10px 0;
        }

        .product-description {
            color: #666;
            font-size: 0.9rem;
            margin-bottom: 15px;
            line-height: 1.4;
            flex-grow: 1;
        }

        .product-category {
            display: inline-block;
            background: #f0f0f0;
            padding: 3px 8px;
            border-radius: 4px;
            font-size: 0.8rem;
            color: #555;
            margin-bottom: 10px;
        }

        .product-stock {
            font-size: 0.9rem;
            margin-bottom: 15px;
        }

        .in-stock {
            color: #007600;
        }

        .out-of-stock {
            color: #cc0c39;
        }

        .product-actions {
            display: flex;
            gap: 10px;
            margin-top: auto;
        }

        .btn-add-cart {
            flex: 1;
            background: var(--amazon-orange);
            color: var(--amazon-dark);
            border: none;
            padding: 10px;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
            transition: background 0.3s ease;
        }

        .btn-add-cart:hover {
            background: #00cc0f;
        }

        .btn-view-details {
            flex: 1;
            background: #ffa41c;
            color: var(--amazon-dark);
            border: none;
            padding: 10px;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
            text-decoration: none;
            text-align: center;
            transition: background 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 5px;
        }

        .btn-view-details:hover {
            background: #ff8c00;
        }

        /* Alert Messages */
        .alert {
            padding: 15px 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            border-left: 4px solid;
            background: white;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .alert-success {
            border-color: #007600;
            color: #007600;
        }

        .alert-error {
            border-color: #cc0c39;
            color: #cc0c39;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            background: white;
            border-radius: 8px;
            max-width: 600px;
            margin: 0 auto;
        }

        .empty-state i {
            font-size: 4rem;
            color: #ddd;
            margin-bottom: 20px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .amazon-header {
                flex-direction: column;
            }
            
            .search-bar {
                width: 100%;
            }
            
            .amazon-subnav {
                flex-direction: column;
                gap: 10px;
            }
            
            .products-grid {
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            }
            
            .hero-banner h1 {
                font-size: 2rem;
            }
            
            .welcome-message {
                flex-direction: column;
                text-align: center;
            }
            
            .user-info {
                justify-content: center;
            }
            
            .user-dropdown {
                width: 100%;
            }
            
            .dropdown-content {
                left: 0;
                right: auto;
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <!-- Header Principal -->
    <header class="amazon-header">
        <a href="/" class="logo">
            <i class="fas fa-bolt logo-icon"></i>
            <span class="logo-text">Tech<span>Store</span></span>
        </a>
        
        <form action="/search" method="GET" class="search-bar">
            <input type="text" name="q" placeholder="Buscar productos..." value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
            <button type="submit">
                <i class="fas fa-search"></i>
            </button>
        </form>
        
        <div class="header-nav">
            <% if (user) { %>
                <!-- Usuario logueado - Mostrar dropdown -->
                <div class="user-dropdown">
                    <button class="user-dropdown-btn">
                        <div class="user-avatar">
                            <%= user.name ? user.name.charAt(0).toUpperCase() : 'U' %>
                        </div>
                        <span>Hola, <%= user.name ? user.name.split(' ')[0] : 'Usuario' %></span>
                        <i class="fas fa-chevron-down"></i>
                    </button>
                    
                    <div class="dropdown-content">
                        <div class="dropdown-header">
                            <h4><%= user.name || 'Usuario' %></h4>
                            <p><%= user.email %></p>
                            <% if (user.role === 'admin') { %>
                                <span class="user-badge admin" style="margin-top: 5px;">
                                    <i class="fas fa-crown"></i> Administrador
                                </span>
                            <% } %>
                        </div>
                        
                        <a href="/profile" class="dropdown-item">
                            <i class="fas fa-user"></i>
                            Mi Perfil
                        </a>
                        
                        <a href="/orders" class="dropdown-item">
                            <i class="fas fa-box"></i>
                            Mis Pedidos
                        </a>
                        
                        <% if (user.role === 'admin') { %>
                            <a href="/admin/dashboard" class="dropdown-item">
                                <i class="fas fa-chart-line"></i>
                                Panel de Administración
                            </a>
                        <% } %>
                        
                        <form action="/logout" method="POST" style="display: contents;">
                            <button type="submit" class="dropdown-item logout" style="width: 100%; border: none; background: none; text-align: left; font-family: inherit; font-size: inherit; cursor: pointer;">
                                <i class="fas fa-sign-out-alt"></i>
                                Cerrar Sesión
                            </button>
                        </form>
                    </div>
                </div>
                
                <a href="/cart" class="nav-item cart">
                    <span>Carrito</span>
                    <div>
                        <i class="fas fa-shopping-cart"></i>
                        <span class="cart-count">0</span>
                    </div>
                </a>
                
            <% } else { %>
                <!-- Usuario NO logueado - Mostrar botones de login/registro -->
                <div class="user-menu">
                    <a href="/login" class="btn btn-secondary">
                        <i class="fas fa-sign-in-alt"></i>
                        Iniciar Sesión
                    </a>
                    <a href="/register" class="btn btn-primary">
                        <i class="fas fa-user-plus"></i>
                        Crear Cuenta
                    </a>
                </div>
                
                <a href="/cart" class="nav-item cart">
                    <span>Carrito</span>
                    <div>
                        <i class="fas fa-shopping-cart"></i>
                        <span class="cart-count">0</span>
                    </div>
                </a>
            <% } %>
        </div>
    </header>

    <!-- Subnav COMPLETAMENTE CORREGIDO - SIN ERRORES -->
    <nav class="amazon-subnav">
        <div class="subnav-links">
            <!-- VERIFICAR SI category EXISTE ANTES DE USARLO -->
            <a href="/" class="<%= typeof category === 'undefined' ? 'active' : '' %>">Inicio</a>
            <a href="/category/electronics" class="<%= (typeof category !== 'undefined' && category === 'electronics') ? 'active' : '' %>">Electrónicos</a>
            <a href="/category/computers" class="<%= (typeof category !== 'undefined' && category === 'computers') ? 'active' : '' %>">Computadoras</a>
            <a href="/category/smartphones" class="<%= (typeof category !== 'undefined' && category === 'smartphones') ? 'active' : '' %>">Smartphones</a>
            <a href="/about" class="<%= (typeof title !== 'undefined' && title.includes('Acerca')) ? 'active' : '' %>">Acerca de</a>
            <a href="/contact" class="<%= (typeof title !== 'undefined' && title.includes('Contacto')) ? 'active' : '' %>">Contacto</a>
            
            <% if (user && user.role === 'admin') { %>
                <a href="/admin/products/new" class="btn btn-success" style="padding: 5px 10px; font-size: 0.8rem;">
                    <i class="fas fa-plus"></i> Nuevo Producto
                </a>
                
                <a href="/admin/dashboard" class="btn btn-secondary" style="padding: 5px 10px; font-size: 0.8rem;">
                    <i class="fas fa-chart-line"></i> Dashboard
                </a>
            <% } %>
        </div>
        
        <% if (user) { %>
            <div class="user-info" style="margin-left: auto;">
                <span style="color: white; font-size: 0.9rem;">
                    <i class="fas fa-user-circle"></i> 
                    <%= user.name %>
                </span>
                <% if (user.role === 'admin') { %>
                    <span class="user-badge admin">
                        <i class="fas fa-crown"></i> Admin
                    </span>
                <% } %>
            </div>
        <% } %>
    </nav>

    <!-- Alert Messages -->
    <div class="container">
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> <%= success %>
            </div>
        <% } %>

        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-error">
                <i class="fas fa-exclamation-circle"></i> <%= error %>
            </div>
        <% } %>

        <!-- Welcome Message for Logged-in Users -->
        <% if (user) { %>
            <div class="welcome-message">
                <div class="welcome-text">
                    <i class="fas fa-hand-sparkles"></i>
                    <div>
                        <h3>¡Bienvenido de nuevo, <%= user.name %>!</h3>
                        <p>Disfruta de compras exclusivas y ofertas especiales para miembros.</p>
                    </div>
                </div>
                
                <div class="user-info">
                    <span class="user-badge">
                        <i class="fas fa-envelope"></i> <%= user.email %>
                    </span>
                    
                    <% if (user.role === 'admin') { %>
                        <a href="/admin/dashboard" class="btn btn-success" style="font-size: 0.8rem;">
                            <i class="fas fa-crown"></i> Panel Admin
                        </a>
                    <% } %>
                    
                    <a href="/profile" class="btn btn-secondary" style="font-size: 0.8rem;">
                        <i class="fas fa-user-cog"></i> Mi Perfil
                    </a>
                </div>
            </div>
        <% } %>

        <!-- Hero Banner -->
        <div class="hero-banner">
            <h1>Descubre la Tecnología del Mañana, Hoy</h1>
            <p>Encuentra los mejores productos electrónicos al mejor precio. Envío gratis en pedidos superiores a $50.</p>
            <a href="/category/electronics" class="btn btn-primary" style="font-size: 1.2rem; padding: 15px 30px;">
                <i class="fas fa-bolt"></i> Explorar Productos
            </a>
        </div>

        <!-- Products Section - SEGURO CON VERIFICACIONES -->
        <% if (typeof products !== 'undefined' && products && products.length > 0) { %>
            <div style="display: flex; justify-content: space-between; align-items: center; margin: 30px 0 20px;">
                <h2 class="section-title">
                    <i class="fas fa-box-open"></i> 
                    <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
                        Resultados para "<%= searchQuery %>"
                    <% } else if (typeof categoryName !== 'undefined' && categoryName) { %>
                        <%= categoryName %>
                    <% } else { %>
                        Productos Destacados
                    <% } %>
                </h2>
                <span style="color: #666; font-size: 0.9rem;">
                    Mostrando <%= products.length %> producto<%= products.length !== 1 ? 's' : '' %>
                </span>
            </div>
            
            <div class="products-grid">
                <% products.forEach(function(product) { %>
                    <% 
                        // VALORES POR DEFECTO SEGUROS
                        const productId = product.id || 0;
                        const productName = product.name || product.title || 'Producto sin nombre';
                        const productPrice = parseFloat(product.price) || 0;
                        const productCategory = product.category || 'electronics';
                        const inStock = product.stock > 0;
                        const stockStatus = inStock ? 'in-stock' : 'out-of-stock';
                        const stockText = inStock ? 'En stock' : 'Agotado';
                    %>
                    
                    <div class="product-card">
                        <div class="product-image">
                            <% if (product.image_url) { %>
                                <img src="<%= product.image_url %>" alt="<%= productName %>" 
                                     onerror="this.onerror=null; this.src='https://via.placeholder.com/300x200/CCCCCC/666666?text=Sin+Imagen';">
                            <% } else { %>
                                <i class="fas fa-<%= product.icon || 'box' %>" style="font-size: 4rem; color: #666;"></i>
                            <% } %>
                        </div>
                        
                        <div class="product-details">
                            <div class="product-name">
                                <%= productName %>
                            </div>
                            
                            <% if (product.category) { %>
                                <span class="product-category">
                                    <i class="fas fa-tag"></i> <%= productCategory %>
                                </span>
                            <% } %>
                            
                            <div class="product-price">
                                $<%= productPrice.toFixed(2) %>
                            </div>
                            
                            <% if (product.description) { %>
                                <div class="product-description">
                                    <% 
                                        const maxLength = 80;
                                        const desc = product.description.length > maxLength 
                                            ? product.description.substring(0, maxLength) + '...' 
                                            : product.description;
                                    %>
                                    <%= desc %>
                                </div>
                            <% } %>
                            
                            <div class="product-stock <%= stockStatus %>">
                                <i class="fas fa-<%= inStock ? 'check-circle' : 'times-circle' %>"></i>
                                <%= stockText %>
                            </div>
                            
                            <div class="product-actions">
                                <!-- MÉTODO MÁS SEGURO PARA ESCAPAR COMILLAS -->
                                <button class="btn-add-cart" 
                                        onclick="addToCart(<%= productId %>, '<%= productName.replace(/'/g, "\\'") %>')"
                                        <%= !inStock ? 'disabled style="opacity: 0.6; cursor: not-allowed;"' : '' %>>
                                    <i class="fas fa-cart-plus"></i> 
                                    <%= inStock ? 'Añadir al carrito' : 'Agotado' %>
                                </button>
                                <a href="/product/<%= productId %>" class="btn-view-details">
                                    <i class="fas fa-info-circle"></i> Ver detalles
                                </a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="empty-state">
                <i class="fas fa-search" style="color: #666;"></i>
                <h3>
                    <% if (typeof searchQuery !== 'undefined' && searchQuery) { %>
                        No se encontraron productos para "<%= searchQuery %>"
                    <% } else { %>
                        No hay productos disponibles
                    <% } %>
                </h3>
                <p>Pronto agregaremos nuevos productos electrónicos.</p>
                
                <% if (user && user.role === 'admin') { %>
                    <a href="/admin/products/new" class="btn btn-success" style="margin-top: 20px;">
                        <i class="fas fa-plus-circle"></i> Agregar Producto
                    </a>
                <% } else if (!user) { %>
                    <a href="/register" class="btn btn-primary" style="margin-top: 20px;">
                        <i class="fas fa-user-plus"></i> Regístrate para recibir notificaciones
                    </a>
                <% } %>
            </div>
        <% } %>
    </div>

    <script>
        // Simulación de carrito
        let cartCount = parseInt(localStorage.getItem('cartCount')) || 0;
        
        // Inicializar contador al cargar la página
        document.addEventListener('DOMContentLoaded', function() {
            updateCartCount(cartCount);
            
            // Mostrar mensaje especial para usuarios logueados
            <% if (user) { %>
                console.log('Usuario logueado: <%= user.name %>');
            <% } else { %>
                console.log('Usuario no logueado');
            <% } %>
        });
        
        function addToCart(productId, productName) {
            // Validar producto ID
            if (!productId || productId <= 0) {
                showAlert('Error: ID de producto inválido', 'error');
                return;
            }
            
            cartCount++;
            localStorage.setItem('cartCount', cartCount.toString());
            updateCartCount(cartCount);
            
            // Mostrar notificación
            showAlert(`"${productName}" añadido al carrito. Ahora tienes ${cartCount} producto${cartCount !== 1 ? 's' : ''} en el carrito.`, 'success');
            
            // Opcional: Enviar al servidor
            fetch('/api/cart/add', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId: productId })
            }).catch(error => console.error('Error:', error));
        }
        
        function updateCartCount(count) {
            const cartElement = document.querySelector('.cart-count');
            if (cartElement) {
                cartElement.textContent = count;
                cartElement.style.display = count > 0 ? 'flex' : 'none';
            }
        }
        
        function showAlert(message, type) {
            const alert = document.createElement('div');
            alert.className = `alert alert-${type === 'success' ? 'success' : 'error'}`;
            alert.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i> 
                ${message}
            `;
            
            const container = document.querySelector('.container');
            if (container) {
                container.prepend(alert);
                
                // Auto-ocultar notificación
                setTimeout(() => {
                    alert.style.opacity = '0';
                    alert.style.transition = 'opacity 0.5s ease';
                    setTimeout(() => alert.remove(), 500);
                }, 3000);
            }
        }

        // Ocultar mensajes automáticamente
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                if (!alert.classList.contains('persistent')) {
                    alert.style.opacity = '0';
                    alert.style.transition = 'opacity 0.5s ease';
                    setTimeout(function() {
                        alert.remove();
                    }, 500);
                }
            });
        }, 5000);
        
        // Manejar logout
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('logout') || 
                e.target.closest('.logout')) {
                if (!confirm('¿Estás seguro de que quieres cerrar sesión?')) {
                    e.preventDefault();
                }
            }
        });
    </script>
</body>
</html>