<!-- Featured Reviews Section -->
<section class="section">
    <h2 class="section-title">
        <i class="fas fa-star"></i>Rese√±as Destacadas
    </h2>
    
    <% if (featuredReviews.length > 0) { %>
        <div class="reviews-grid">
            <% featuredReviews.forEach(review => { %>
                <a href="/review/<%= review.id %>" class="review-card featured" style="text-decoration: none; color: inherit;">
                    <div class="review-header">
                        <h3 class="review-title"><%= review.title %></h3>
                        <div class="rating">
                            <%= '‚òÖ'.repeat(review.rating) %><%= '‚òÜ'.repeat(5 - review.rating) %>
                        </div>
                    </div>
                    
                    <div class="movie-title">
                        <i class="fas fa-video"></i><%= review.movie_title %>
                    </div>
                    
                    <p class="review-content">
                        <%= review.content.length > 120 ? 
                            review.content.substring(0, 120) + '...' : 
                            review.content %>
                    </p>
                    
                    <div class="review-footer">
                        <div class="review-author">
                            <i class="fas fa-user"></i>
                            <%= review.username %>
                        </div>
                        <div class="review-date">
                            <%= new Date(review.created_at).toLocaleDateString() %>
                        </div>
                    </div>
                </a>
            <% }); %>
        </div>
    <% } else { %>
        <!-- ... (mantener el empty state) -->
    <% } %>
</section>

