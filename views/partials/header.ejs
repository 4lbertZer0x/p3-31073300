<header class="amazon-header">
    <a href="/" class="logo">
        <i class="fas fa-bolt logo-icon"></i>
        <span class="logo-text">Electro<span>Tienda</span></span>
    </a>

    <form action="/search" method="GET" class="search-bar">
        <input type="text" name="q" placeholder="Buscar productos, marcas, categorías..." 
               value="<%= searchQuery || '' %>">
        <button type="submit">
            <i class="fas fa-search"></i> Buscar
        </button>
    </form>

    <div class="header-nav">
        <% if (user) { %>
            <a href="/user/profile" class="nav-item">
                <span>Hola, <%= user.username %></span>
                <span>Mi cuenta</span>
            </a>
        <% } else { %>
            <a href="/login" class="nav-item">
                <span>Hola, identifícate</span>
                <span>Cuenta y listas</span>
            </a>
        <% } %>
        
        <a href="/cart" class="nav-item cart">
            <i class="fas fa-shopping-cart" style="font-size: 1.5rem;"></i>
            <span>Carrito</span>
            <div class="cart-count">0</div>
        </a>
    </div>

    <div class="user-menu">
        <% if (user) { %>
            <a href="/user/profile" class="btn btn-primary">
                <i class="fas fa-user-circle"></i> Perfil
            </a>
            
            <% if (user.role === 'admin') { %>
                <a href="/admin" class="btn btn-secondary">
                    <i class="fas fa-cog"></i> Admin
                </a>
            <% } %>
            
            <form method="POST" action="/logout" style="display: inline;">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-sign-out-alt"></i> Salir
                </button>
            </form>
        <% } else { %>
            <a href="/login" class="btn btn-primary">
                <i class="fas fa-sign-in-alt"></i> Entrar
            </a>
            <a href="/register" class="btn btn-success">
                <i class="fas fa-user-plus"></i> Registrarse
            </a>
        <% } %>
    </div>
</header>